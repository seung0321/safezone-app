{
  "expo": {
    "name": "SafeRoute",
    "slug": "saferoute",
    "version": "2.3.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.saferoute.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SafeRoute는 안전한 경로를 제공하기 위해 위치 정보가 필요합니다.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "SafeRoute는 실시간 안전 알림을 제공하기 위해 위치 정보가 필요합니다."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1E1E2C"
      },
      "package": "com.saferoute.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "POST_NOTIFICATIONS",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#6C63FF",
      "androidMode": "default",
      "androidCollapsedTitle": "SafeRoute"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "SafeRoute는 안전한 경로 안내를 위해 위치 정보가 필요합니다."
        }
      ]
    ],
    "owner": "seung0321",
    "extra": {
      "eas": {
        "projectId": "c6662de4-a817-4449-8024-5ad02fa5ea7e"
      }
    }
  }
}
